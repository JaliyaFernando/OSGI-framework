				Details = Details+"\n"+el_seats.displayDetails(type);
				return el_seats.getPrice(type);
			}else {
				return 00.00;
			}
		}else if (select.equalsIgnoreCase("n")) {
			return 00.00;
		}
		return 00.00;

	}

	@Override
	public String getDetails() {
		return Details;
	}

}
