package com.vehicleinteriorupgrade;

public abstract class Interior {
	public void displyInteriorUpgradeDetails() {
		System.out.println("     ***** Select Your Interior Upgrade *****     ");
		System.out.println("------------------------------------------");
		System.out.println("         Upgrade Type 1 - COLOR & TRIM");
		System.out.println("         Upgrade Type 2 - SPECIAL TRIM");
		System.out.println("         Upgrade Type 3 - FLOORMATS");
		System.out.println("         Upgrade Type 4 - STEERING WHEEL");
		System.out.println("         Upgrade Type 5 - SEATS");
		System.out.println("         Upgrade Type 3 -  SEATS BELTS");
		System.out.println("------------------------------------------");
	} 
	
	abstract double getPrice(String type);
	abstract String displayDetails(String type);
}
